{
  "name": "ai-chatbot-telegram",
  "version": "1.0.0",
  "description": "AI Chatbot Telegram terintegrasi dengan ChatGPT",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "nodemon --exec ts-node src/main.ts",
    "watch": "tsc -w",
    "setup": "./setup.sh",
    "clean": "rm -rf dist",
    "lint": "tsc --noEmit",
    "test-config": "ts-node src/test-config.ts",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ai-chatbot-telegram",
    "pm2:restart": "pm2 restart ai-chatbot-telegram",
    "pm2:reload": "pm2 reload ai-chatbot-telegram",
    "pm2:delete": "pm2 delete ai-chatbot-telegram",
    "pm2:logs": "pm2 logs ai-chatbot-telegram",
    "pm2:status": "pm2 status",
    "deploy": "npm run build && npm run pm2:reload"
  },
  "keywords": [
    "telegram",
    "chatbot",
    "chatgpt",
    "ai",
    "nodejs",
    "typescript"
  ],
  "author": "Asrul Kadir",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.10",
    "openai": "^4.28.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
